<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/DashboardActivity_srollView"
    tools:context=".activities.DashboardActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundNormal"
        tools:context=".activities.DashboardActivity">

        <ProgressBar
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/DashboardActivity_speedring"
            style="?android:progressBarStyleHorizontal"
            android:progressDrawable="@drawable/circle"
            android:progress="0"
            android:progressTint="@color/primaryText"
            app:layout_constraintBottom_toBottomOf="@+id/DashboardActivity_databar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.18906"/>

        <LinearLayout
            android:id="@+id/DashboardActivity_LinearLayoutSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/DashboardActivity_speedring"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/DashboardActivity_speedring">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/DashboardActivity_speed"
                android:text="000"
                android:textSize="50dp"
                android:textColor="@color/primaryText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KPH"
                android:layout_marginTop="-10dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppins_light"
                android:textSize="20dp"
                android:textColor="@color/primaryText" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/DashboardActivity_databar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/floating_data_window"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/DashboardActivity_stats"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/DashboardActivity_speedring"
            android:layout_marginTop="85dp">

            <LinearLayout
                android:layout_marginLeft="25dp"
                android:layout_marginTop="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Engine RPM"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/primaryText"
                    android:alpha="0.5"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/DashboardActivity_rpm"
                        android:text="0000"
                        android:textSize="30dp"
                        android:fontFamily="@font/poppins_light"
                        android:textColor="@color/primaryText"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:text="RPM"
                        android:textSize="17dp"
                        android:fontFamily="@font/poppins_thin"
                        android:textColor="@color/primaryText"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Runtime"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/primaryText"
                    android:alpha="0.5"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/DashboardActivity_runtime"
                        android:text="000"
                        android:textSize="30dp"
                        android:fontFamily="@font/poppins_light"
                        android:textColor="@color/primaryText"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/DashboardActivity_runtime_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="M"
                        android:textSize="17dp"
                        android:fontFamily="@font/poppins_thin"
                        android:textColor="@color/primaryText"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="25dp"
                android:layout_weight="2"
                android:layout_marginTop="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Distance"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/primaryText"
                    android:alpha="0.5"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/DashboardActivity_distance"
                        android:text="000"
                        android:textSize="30dp"
                        android:fontFamily="@font/poppins_light"
                        android:textColor="@color/primaryText"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="KM"
                        android:textSize="17dp"
                        android:fontFamily="@font/poppins_thin"
                        android:textColor="@color/primaryText"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/DashboardActivity_stats"
            android:orientation="vertical"
            android:background="@color/tertiaryText"
            app:layout_constraintTop_toBottomOf="@+id/DashboardActivity_databar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="25dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_margin="2dp"
                    android:background="@color/backgroundNormal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Fuel Level"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/primaryText"
                        android:alpha="0.5"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/DashboardActivity_fuel"
                            android:text="000"
                            android:textSize="30dp"
                            android:fontFamily="@font/poppins_light"
                            android:textColor="@color/primaryText"
                            />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:text="%"
                            android:textSize="17dp"
                            android:fontFamily="@font/poppins_thin"
                            android:textColor="@color/primaryText"
                            />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="2dp"
                    android:background="@color/backgroundNormal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Oil Temperature"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/primaryText"
                        android:alpha="0.5"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/DashboardActivity_oiltemp"
                            android:text="000"
                            android:textSize="30dp"
                            android:fontFamily="@font/poppins_light"
                            android:textColor="@color/primaryText"
                            />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:text="°C"
                            android:textSize="17dp"
                            android:fontFamily="@font/poppins_thin"
                            android:textColor="@color/primaryText"
                            />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1200dp"
            app:layout_constraintTop_toBottomOf="@+id/DashboardActivity_stats"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical"
            android:layout_marginTop="25dp">

            <fragment
                android:id="@+id/DashboardActivity_map"
                android:name="com.example.launchcontrol.fragments.WorkaroundMapFragment"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                tools:context="com.example.launchcontrol.activities.DashboardActivity"/>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/DashboardActivity_speedchart"
                android:layout_width="match_parent"
                android:layout_height="400dp"/>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/DashboardActivity_rpmchart"
                android:layout_width="match_parent"
                android:layout_height="400dp"/>

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</ScrollView>
