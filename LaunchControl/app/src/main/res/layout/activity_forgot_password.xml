<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/backgroundNormal"
    android:id="@+id/forgotPasswordActivity_rootLayout"
    android:layout_height="match_parent"
    tools:context=".activities.ForgotPasswordActivity">

    <TextView
        android:id="@+id/forgotPassword_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:text="Launch Control"
        android:textColor="@color/primaryText"
        android:textSize="33dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forgotPassword_logo"
        app:layout_constraintVertical_bias="0.8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password Reset"
            android:textColor="@color/primaryText"
            android:fontFamily="@font/poppins_medium"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@+id/forgotPassword_logo"
            app:layout_constraintLeft_toLeftOf="parent" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/primaryText">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/forgotPassword_email"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:hint="Email Address"
                android:background="@null"
                android:textColorHint="@color/primaryText"
                android:textColor="@color/primaryText"
                android:inputType="text"/>
        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:background="@drawable/gradient"
            android:layout_height="1dp"
            android:layout_marginBottom="25dp"></View>

        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/forgotPassword_reset_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:textColor="@color/primaryText"
            android:text="Send Reset Request"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>